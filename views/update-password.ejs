<!-- Update Password for already logged in user -->
<div class="form-container">
    <p class="form-title text-center">Update Password</p>
    <form action="/users/update-password" method="post">
        <%- include('_user-messages')%>
        <div class="form-group">
            <input type="password" id="oldPassword" name="oldPassword" class="form-control" placeholder=" " required
                value="<%= locals.oldPassword ? locals.oldPassword : '' %>" />
            <label for="oldPassword">Current Password</label>
        </div>
        <div class="form-group">
            <input type="password" id="password" name="password" class="form-control" placeholder=" " required
                value="<%= locals.password ? locals.password : '' %>" />
            <label for="password">New Password</label>
        </div>
        <div class="form-group">
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder=" "
                required value="<%= locals.confirmPassword ? locals.confirmPassword : '' %>" />
            <label for="confirmPassword">Confirm New Password</label>

        </div>
        <button type="submit" class="btn btn-primary btn-block">Update</button>
    </form>
    <div class="after-form">
        <a href="/users/sign-in">Go Back </a>
    </div>

</div>